<idea-plugin version="2">

    <id>net.chilicat.felixscr</id>

    <idea-version since-build="111.277"/>

    <name>Felix SCR Annotation Processor</name>
    <description>
        [ALPHA] The compiler plugin will look in the dependency graph of the module (which will be currently compiled) if class
        "org.apache.felix.scr.annotations.Component"
        is available. In case the class is available the plugin assumes that Felix SCR annotations are in use. The
        service component xml will be created and added to
        the manifest in the build output.
    </description>
    <version>0.1</version>
    <vendor url="https://github.com/chilicat/felix-annotation-processor">chilicat.net</vendor>


    <depends>com.intellij.modules.lang</depends>
    <depends>com.intellij.modules.java</depends>


    <application-components>
        <!-- Add your application components here -->
    </application-components>

    <project-components>
        <component>
            <implementation-class>net.chilicat.felixscr.intellij.ScrComponent</implementation-class>
        </component>
    </project-components>


    <actions>
        <!-- Add your actions here -->
    </actions>


    <extensions defaultExtensionNs="com.intellij">
        <compiler implementation="net.chilicat.felixscr.intellij.build.ScrCompiler"/>
        <projectConfigurable instance="net.chilicat.felixscr.intellij.ScrConfigurable"/>
        <projectService serviceImplementation="net.chilicat.felixscr.intellij.ScrSettings"/>
    </extensions>

</idea-plugin>